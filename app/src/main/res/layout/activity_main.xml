<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/bg"
        android:orientation="vertical"
>
    <Button
            android:text="Add"
            android:layout_width="91dp"
            android:layout_height="59dp" android:id="@+id/addBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp" app:layout_constraintStart_toStartOf="parent"
    />
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#504B4B"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintBottom_toTopOf="@+id/addBtn"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="401dp"
            android:layout_height="643dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/addBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/listView"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>